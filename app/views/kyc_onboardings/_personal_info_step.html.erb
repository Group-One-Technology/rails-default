<div class="flex flex-col justify-center items-start w-full my-4">
	<label class="mb-2 no-style text-base font-normal text-gray-500" for="place-of-birth">Place of Birth</label>
	<input class="<%= 'invalid' if @kyc_onboarding.errors[:place_of_birth].present? %> w-full border-2 outline-none p-4 focus:border-blue-100 focus:border" type="text" id="place-of-birth" placeholder="Place of Birth" name="kyc_onboarding[place_of_birth]" value="<%=@kyc_onboarding.place_of_birth%>">
</div>

<div class="flex flex-col justify-center items-start w-full relative my-4">
	<label class="mb-2 no-style text-base font-normal text-gray-500" for="nationality">Nationality</label>
	
	<select class="<%= 'invalid' if @kyc_onboarding.errors[:nationality].present? %> w-full border-2 outline-none p-4 pl-10 focus:border-blue-100 focus:border" name="kyc_onboarding[nationality]" id="nationality">
		<option value="" disabled <%='selected' if @kyc_onboarding.nationality.blank?%>>Select a Nationality</option>
		<% nationalities_for_select.each do |nationality| %>
			<% selected = false %>
			<% selected = true if @kyc_onboarding.nationality == nationality %>
			<% selected = true if @kyc_onboarding.nationality.blank? && nationality == 'Filipino' %>
			<option value='<%=nationality%>' <%='selected' if selected%> >
				<%=nationality%>
			</option>
		<% end %>
		
	</select>
</div>

<div class="flex flex-col justify-center items-start w-full relative my-4">
	<label class="mb-2 no-style text-base font-normal text-gray-500" for="marital-status">Marital Status</label>
	
	<select class="<%= 'invalid' if @kyc_onboarding.errors[:marital_status].present? %> w-full border-2 outline-none p-4 pl-10 focus:border-blue-100 focus:border" name="kyc_onboarding[marital_status]"  id="marital-status">
		<option value="" disabled <%='selected' if @kyc_onboarding.marital_status.blank? %> >Select a Marital Status</option>
		<option value="Single" <%='selected' if @kyc_onboarding.marital_status == 'Single'%>>Single</option> 
		<option value="Married" <%='selected' if @kyc_onboarding.marital_status == 'Married'%> >Married</option> 
		<option value="Widowed" <%='selected' if @kyc_onboarding.marital_status == 'Widowed'%> >Widowed</option> 
	</select>
</div>