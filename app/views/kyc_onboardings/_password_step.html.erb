<% @user ||= User.new %>

<input type="hidden" name="kyc_onboarding[validation_set]" value="password" >

<div class="flex flex-col items-start justify-center w-full my-4">
	<label class="mb-2 no-style text-gray-700" for="password">Password</label>
	<input autofocus="true" class="<%= 'invalid' if @kyc_onboarding&.errors[:password].present? %> w-full py-3 px-4 border-2 outline-none focus:border-teal focus:border-2" name="kyc_onboarding[password]" type="password" value="<%= @kyc_onboarding&.password %>" id="password" placeholder="Enter your password">
</div>
<div class="flex flex-col items-start justify-center w-full my-4">
	<label class="mb-2 no-style text-gray-700" for="password-confirmation">Confirm Password</label>
	<input class="<%= 'invalid' if @kyc_onboarding&.errors[:password_confirmation].present? %> w-full py-3 px-4 border-2 outline-none focus:border-teal focus:border-2" name="kyc_onboarding[password_confirmation]" type="password" value="<%= @kyc_onboarding&.password_confirmation %>" id="password-confirmation" placeholder="Enter your password">
</div>