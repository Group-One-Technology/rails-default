<form
  class="flex flex-col items-center justify-center w-full">
  <input type="hidden" name="kyc_onboarding[validation_set]" value="phone" >
  <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token %>" >
	
  <div class="flex items-center justify-between w-full">
		<p class="mb-2 text-base font-normal text-gray-500">Mobile Number</p>
		<button
			type="button" 
			_="on click toggle .hidden on #static-phone-display then toggle .hidden on #edit-phone-form then toggle .hidden on .inner-text in me"
			class="font-semibold tracking-wide font-farmbank-teal cursor-pointer hover:underline">
        <span class="inner-text <%= 'hidden' if @kyc_onboarding.errors.messages.any?%>">Edit </span>
        <span class="inner-text <%= 'hidden' unless @kyc_onboarding.errors.messages.any?%>"> Cancel </span>
		</button>
	</div>
	
	<div class="flex flex-col items-stretch justify-center w-full p-6 bg-gray-50 rounded-2xl">
		<div id="static-phone-display" class="<%= 'hidden' if @kyc_onboarding.errors.messages.any?%> w-full">
			<h5 class="font-semibold tracking-wide text-gray-700 "><%=@kyc_onboarding.phone%></h5>
		</div>

		<div id="edit-phone-form" class="<%= 'hidden' unless @kyc_onboarding.errors.messages.any?%>">
			<div class="mb-3">
				<label class="mb-1 text-gray-700" for="phone-number">Mobile Number</label>
				<input class="<%= 'invalid' if @kyc_onboarding.errors[:phone].present? %> w-full py-3 px-4 border-2 outline-none focus:border-teal focus:border-2" name="kyc_onboarding[phone]" type="text" value="<%=@kyc_onboarding.phone %>" id="phone-number" placeholder="Mobile Number">
        <p class="text-red-500 text-sm"> 
          <% if @kyc_onboarding.errors[:phone].present? %>
            <%= @kyc_onboarding.errors[:phone].first.humanize %>
          <% end %>
        </p>
      </div>

      <div class="float-right flex items-center space-x-3">
        <button
          class="float-right rounded-md px-4 py-2 bg-farmbank-yellow text-white font-semibold tracking-wide hover:bg-yellow-500"
          hx-put="<%=kyc_onboarding_summary_path(code: @kyc_onboarding.identifier, step: 'phone')%>"
          hx-trigger="click"
          hx-target="#summary-phone-form"
          type="button">
          Save
        </button>
      </div>
		</div>
	</div>
</form>