<div class="items-center justify-center bg-farmbank-teal  h-full flex py-12 overflow-x-scroll">

  <div class="m-auto w-full px-6 md:w-1/2 sm:max-w-xl">
    
    <div class="flex justify-center mb-8">
      <%=link_to root_path do %>
        <%=inline_svg_tag('farmbank-logo.svg')%>
      <% end %>
    </div>
    
    <div class=" shadow p-6 md:px-8 rounded-lg bg-white">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'farmbank-input-styling'}) do |f| %>
        
        <div class="field my-6">
          <%= f.label :email, class: "font-semibold text-xl py-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "#{'invalid' if flash.alert.present?}" %>
        </div>

        <div class="field mt-4">
          <%= f.label :password, class: "font-semibold text-xl" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "#{'invalid' if flash.alert.present?}" %>
          
          <% if flash[:alert].present? %>
            <div class="text-red-500 mt-2 font-semibold">
              <%= flash[:alert] %>
            </div>
          <% end %>
        </div>

        <div class="flex items-center justify-between w-full mb-3">
          <% if devise_mapping.rememberable? %>
            <div class="field flex items-center ">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, class: "font-semibold ml-2" %>
            </div>
          <% end %>

          <div class="field">
            <%= link_to "Forgot your password?", new_user_password_path, class: "font-semibold text-base text-gray-600" %>
          </div>
        </div>

        <div class="actions mb-8">
          <%= f.submit "Log in", class: 'bg-farmbank-yellow hover:bg-yellow-500 no-style w-full rounded-full py-3 text-white font-semibold cursor-pointer' %>
        </div>
      <% end %>
    </div>
  </div>
</div>